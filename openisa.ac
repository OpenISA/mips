AC_ARCH(openisa){

  ac_mem   DM:512M;
  ac_regbank RB:64;
  ac_regbank RBS:64;
  ac_regbank RBD:64;
  ac_reg id;
  ac_reg cc;
  ac_reg ldireg;
  ac_reg ijmpreg;
  ac_wordsize 32;

  ARCH_CTOR(openisa) {

    ac_isa("openisa_isa.ac");
    set_endian("little");

  };
};
